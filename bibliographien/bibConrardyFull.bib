	number = {4},
	urldate = {2024-03-18},
	journal = {Unterrichtswissenschaft},
	author = {Girnat, Boris and Hascher, Tina},
	month = dec,
	year = {2021},
	pages = {525--546},
	file = {Full Text:/Users/richard/Zotero/storage/MU92PWY9/Girnat and Hascher - 2021 - Beliefs von Schweizer Schülerinnen und Schülern zu.pdf:application/pdf},
}

